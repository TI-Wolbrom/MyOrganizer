<AnchorPane prefHeight="200.0" prefWidth="331.0" style="-fx-background-color: linear-gradient(#FE2E2E, #FE2E2E, #FA5858, #FA5858, #FA5858, #FE2E2E, #FE2E2E)" xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1" fx:controller="konkurs.fx_contollers.SettingsController">
